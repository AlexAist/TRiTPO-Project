<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="@string/FirstCarAdd" />

        <EditText
            android:id="@+id/AddCarText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/carName"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/AddTankVolumeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/tankVol"
            android:inputType="number" />

        <EditText
            android:id="@+id/HowMuchOilText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/tankOil"
            android:inputType="number" />

        <EditText
            android:id="@+id/WhatMileageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/whatMileage"
            android:inputType="number" />

        <Button
            android:id="@+id/SaveCarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SaveCarBtn" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>